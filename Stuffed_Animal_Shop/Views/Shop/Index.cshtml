@using Stuffed_Animal_Shop.ViewModels.Filters;
@model IEnumerable<Stuffed_Animal_Shop.Models.Product>

@{
    ViewData["Title"] = "Shop";
    ViewData["Hero"] = "Shop";
}

@{
    Filter filter = ViewBag.Filter;
}

<!-- Shop Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-12">
            <form method="get" asp-controller="Shop" asp-action="Index">
                <!-- Price Start -->
                <div class="border-bottom mb-4 pb-4">
                    <h5 class="font-weight-semi-bold mb-4">Filter by price</h5>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Prices != null && filter.Prices.Contains("all") ? "checked" : null) id="price-all" name="Prices" value="all">
                            <label class="custom-control-label" for="price-all">All Price</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Prices != null && filter.Prices.Contains("100") ? "checked" : null) id="price-1" name="Prices" value="100">
                            <label class="custom-control-label" for="price-1">$0 - $100</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Prices != null && filter.Prices.Contains("200") ? "checked" : null) id="price-2" name="Prices" value="200">
                            <label class="custom-control-label" for="price-2">$100 - $200</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Prices != null && filter.Prices.Contains("300") ? "checked" : null) id="price-3" name="Prices" value="300">
                            <label class="custom-control-label" for="price-3">$200 - $300</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Prices != null && filter.Prices.Contains("400") ? "checked" : null) id="price-4" name="Prices" value="400">
                            <label class="custom-control-label" for="price-4">$300 - $400</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                            <input type="checkbox" class="custom-control-input" @(filter.Prices != null && filter.Prices.Contains("500") ? "checked" : null) id="price-5" name="Prices" value="500">
                            <label class="custom-control-label" for="price-5">$400 - $500</label>
                        </div>
                    </div>
                </div>
                <!-- Price End -->
                <!-- Color Start -->
                <div class="border-bottom mb-4 pb-4">
                    <h5 class="font-weight-semi-bold mb-4">Filter by color</h5>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Colors != null && filter.Colors.Contains("all") ? "checked" : null) id="color-all" name="Colors" value="all">
                            <label class="custom-control-label" for="color-all">All Color</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Colors != null && filter.Colors.Contains("white") ? "checked" : null) id="color-1" name="Colors" value="white">
                            <label class="custom-control-label" for="color-1">White</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Colors != null && filter.Colors.Contains("red") ? "checked" : null) id="color-2" name="Colors" value="red">
                            <label class="custom-control-label" for="color-2">Red</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Colors != null && filter.Colors.Contains("green") ? "checked" : null) id="color-3" name="Colors" value="green">
                            <label class="custom-control-label" for="color-3">Green</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Colors != null && filter.Colors.Contains("blue") ? "checked" : null) id="color-4" name="Colors" value="blue">
                            <label class="custom-control-label" for="color-4">Blue</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Colors != null && filter.Colors.Contains("yellow") ? "checked" : null) id="color-5" name="Colors" value="yellow">
                            <label class="custom-control-label" for="color-5">Yellow</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Colors != null && filter.Colors.Contains("purple") ? "checked" : null) id="color-6" name="Colors" value="purple">
                            <label class="custom-control-label" for="color-6">Purple</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Colors != null && filter.Colors.Contains("all") ? "orange" : null) id="color-7" name="Colors" value="orange">
                            <label class="custom-control-label" for="color-7">Orange</label>
                        </div>
                    </div>
                </div>
                <!-- Color End -->
                <!-- Size Start -->
                <div class="mb-5">
                    <h5 class="font-weight-semi-bold mb-4">Filter by size</h5>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Sizes != null && filter.Sizes.Contains("all") ? "checked" : null) id="size-all" name="Sizes" value="all">
                            <label class="custom-control-label" for="size-all">All Size</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Sizes != null && filter.Sizes.Contains("SM") ? "checked" : null) id="size-1" name="Sizes" value="SM">
                            <label class="custom-control-label" for="size-1">SM</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Sizes != null && filter.Sizes.Contains("M") ? "checked" : null) id="size-2" name="Sizes" value="M">
                            <label class="custom-control-label" for="size-2">M</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Sizes != null && filter.Sizes.Contains("L") ? "checked" : null) id="size-3" name="Sizes" value="L">
                            <label class="custom-control-label" for="size-3">L</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" @(filter.Sizes != null && filter.Sizes.Contains("XL") ? "checked" : null) id="size-4" name="Sizes" value="XL">
                            <label class="custom-control-label" for="size-4">XL</label>
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                            <input type="checkbox" class="custom-control-input" @(filter.Sizes != null && filter.Sizes.Contains("XXL") ? "checked" : null) id="size-5" name="Sizes" value="XXL">
                            <label class="custom-control-label" for="size-5">XXL</label>
                        </div>
                    </div>
                </div>
                <!-- Size End -->

                <input style="display: none;" name="Sort" value="@filter.Sort" />
                <input style="display: none;" name="Name" value="@filter.Name" />
                <!-- Action button Start -->
                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                    <input type="submit" class="btn btn-primary" />
                </div>
                <!-- Action button End -->
            </form>
        </div>


        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-12">
            <div class="row pb-3">
                <div class="col-12 pb-1">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <form method="get" asp-controller="Shop" asp-action="Index">
                            <div class="input-group">
                                <input type="text" class="form-control" name="Name" placeholder="Search by name">
                                <button type="submit" class="input-group-append border-0 d-flex justify-content-center align-items-center">
                                    <div  class="input-group-text bg-transparent text-primary">
                                        <i class="fa fa-search"></i>
                                    </div>
                                </button>
                            </div>
                        </form>
                        <!-- Sort start -->
                        <div class="dropdown ml-4">
                            <button class="btn border dropdown-toggle" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false">
                                Sort by
                            </button>
                            <div>
                                <div class="dropdown-menu" style="text-align: center;" aria-labelledby="triggerId">
                                    <div>
                                        <span style="display: none;">@(filter.Sort = "lastest");</span>
                                        <a class="btn btn-outline-primary" style="border: none; border-radius:10px;" href="?@filter.ToQueryString()">Latest</a>
                                    </div>
                                    <div>
                                        <span style="display: none;">@(filter.Sort = "best_rating");</span>
                                        <a class="btn btn-outline-primary" style="border: none; border-radius:10px;" href="?@filter.ToQueryString()">Best Rating</a>
                                    </div>
                                    <div>
                                        <span style="display: none;">@(filter.Sort = "cheap");</span>
                                        <a class="btn btn-outline-primary" style="border: none; border-radius:10px;" href="?@filter.ToQueryString()">Cheap to expensive</a>
                                    </div>
                                    <div>
                                        <span style="display: none;">@(filter.Sort = "expensive");</span>
                                        <a class="btn btn-outline-primary" style="border: none; border-radius:10px;" href="?@filter.ToQueryString()">Expensive to cheap</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach(var item in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                        <div class="card product-item border-0 mb-4">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                <img class="img-fluid" style="max-width: 100%; object-fit: cover;" src="@item.MainImage" alt="">
                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3">@item.Name</h6>
                                <div class="d-flex justify-content-center">
                                    <h6>$@item.Price</h6>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a href="/shop/detail/@item.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                                <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                            </div>
                        </div>
                    </div>           
                }
             
                <div class="col-12 pb-1">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center mb-3">
                            @if (ViewBag.TotalPages > 0)
                            {
                                @if (ViewBag.Page > 1)
                                {
                                    <span style="display: none;">@(filter.Page = 1);</span>
                                    <li class="page-item">
                                        <a class="page-link" href="?@filter.ToQueryString()">First</a>
                                    </li>
                                }

                                @for (int i = Math.Max(1, ViewBag.Page - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.Page + 2); i++)
                                {
                                    <span style="display: none;">@(filter.Page = i);</span>
                                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                        <a class="page-link" href="?@filter.ToQueryString()">@i</a>
                                    </li>
                                }

                                @if (ViewBag.Page < ViewBag.TotalPages)
                                {
                                    <span style="display: none;">@(filter.Page = ViewBag.TotalPages);</span>
                                    <li class="page-item">
                                        <a class="page-link" href="?@filter.ToQueryString()">Last</a>
                                    </li>
                                }
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <!-- Shop Product End -->
    </div>
</div>
<!-- Shop End -->