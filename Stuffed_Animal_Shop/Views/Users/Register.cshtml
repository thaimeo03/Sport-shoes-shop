@{
    Layout = "_AuthLayout";
}

@using Stuffed_Animal_Shop.ViewModels.Users;
@model UserRegister;

<section class="vh-100 d-flex justify-content-center" style="background-color: #9A616D;">
    <div class="container py-5"">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" style="max-width: 100%; height: 100%; object-fit:cover; border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-action="Register">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">Logo</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign up your account</h5>

                                    <div class="d-flex gap-2">
                                        <div class="form-outline mb-4 position-relative">
                                            <label class="form-label" for="name">Name</label>
                                            <input type="text" id="name" asp-for="Name" class="form-control form-control-md" />
                                            <span asp-validation-for="Name" class="text-danger position-absolute bottom-0 translate-middle-y top-100" style="font-size: 12px"></span>
                                        </div>

                                        <div class="form-outline mb-4 position-relative">
                                            <label class="form-label" for="email">Email</label>
                                            <input type="text" id="email" asp-for="Email" class="form-control form-control-md" />
                                            <span asp-validation-for="Email" class="text-danger position-absolute bottom-0 translate-middle-y top-100" style="font-size: 12px">
                                                @if (TempData["Error"] != null)
                                                {
                                                    @TempData["Error"]
                                                }
                                            </span>
                                        </div>
                                    </div>

                                    <div class="d-flex gap-2">
                                        <div class="form-outline mb-4 position-relative">
                                            <label class="form-label" for="password">Password</label>
                                            <input type="password" id="password" asp-for="Password" class="form-control form-control-md" />
                                            <span asp-validation-for="Password" class="text-danger position-absolute bottom-0 translate-middle-y top-100" style="font-size: 12px"></span>
                                        </div>

                                        <div class="form-outline mb-4 position-relative">
                                            <label class="form-label" for="confirm-password">Confirm password</label>
                                            <input type="password" id="confirm-password" asp-for="ConfirmPassword" class="form-control form-control-md" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger position-absolute bottom-0 translate-middle-y top-100" style="font-size: 12px"></span>
                                        </div>
                                    </div>

                                    <div class="pt-1 mb-4 mt-3">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit" value="Register">Register</button>
                                    </div>

                                    <a class="small text-muted" href="#!">Forgot password?</a>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Already have an account? <a href="/users/login"
                                                                  style="color: #393f81;">Login here</a>
                                    </p>
                                    <a href="#!" class="small text-muted">Terms of use.</a>
                                    <a href="#!" class="small text-muted">Privacy policy</a>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
