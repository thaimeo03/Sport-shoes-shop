@using Stuffed_Animal_Shop.ViewModels;
@model IEnumerable<Review>

@{
    Product product = ViewBag.Product;
}

<div class="tab-pane fade" id="tab-pane-3">
    <div class="row">
        <div class="col-md-6">
            @{
                <h4 class="mb-4">@Model.Count() review for "Colorful Stylish Shirt"</h4>
                int count = 0;
                foreach (Review review in Model)
                {
                    string s = @ViewBag.Avatars[count];
                    <div class="media mb-4">
                        <img src="@s" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                        <div class="media-body">
                            <h6>@ViewBag.Users[count]<small> - <i>@review.CreatedAt</i></small></h6>
                            <div class="text-primary mb-2">
                                @for (int i = 0; i < review.Rating; i++)
                                {
                                    <i class="fas fa-star"></i>
                                }
                                @if (review.Rating % 1 != 0)
                                {
                                    <i class="fas fa-star-half-alt"></i>
                                }
                                @for (int i = 0; i < 5 - review.Rating; i++)
                                {
                                    <i class="far fa-star"></i>
                                }
                            </div>
                            <p>@review.Comment</p>
                        </div>
                    </div>
                    count++;
                }
            }

        </div>

        

        <div class="col-md-6">
            <h4 class="mb-4">Leave a review</h4>
            <small>Your email address will not be published. Required fields are marked *</small>
            <div class="d-flex my-3">
                <p class="mb-0 mr-2">Your Rating * :</p>
                <div class="text-primary">
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                </div>
            </div>
            <form asp-controller="Shop" asp-action="CreateReview">
                <div class="form-group">
                    <input type="hidden" class="form-control" id="product" name="productID" value="@product.ProductId">
                </div>
                <div class="form-group">
                    <label for="message">Your Review *</label>
                    <textarea id="message" cols="30" rows="5" class="form-control" name="context"></textarea>
                </div>
                <div class="form-group">
                    <input type="hidden" class="form-control" id="email" name="email" value="@ViewBag.MyEmail">
                </div>
                <div class="form-group">
                    <label for="ratting">Ratting *</label>
                    <input class="form-control" id="ratting" name="ratting">
                </div>
                <div class="form-group mb-0">
                    <input type="submit" value="Leave Your Review" class="btn btn-primary px-3">
                </div>

            </form>
        </div>
    </div>
</div>